
@{
    ViewBag.Title = "会员管理";
    Layout = "~/Views/_LayoutView.cshtml";
}
@model IEnumerable<Jango.Lab.Models.User>
<h2>@ViewBag.Title</h2>

<div class=" search">

</div>
<div class="panel">

</div>

<div class="panel-body">

    <table class="table table-bordered table-responsive">
        <thead>
            <tr>
                <th>名称</th>
                <th>手机号</th>
                <th>邮箱</th>
                <th>会员等级</th>
                <th>生日</th>
                <th>会员积分</th>
                <th>账户余额</th>
                <th>创建时间</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Mobile</td>
                        <td>@item.Email</td>
                        <td>@item.Level</td>
                        <td>@item.Birthday.ToString("yyyy/MM/dd")</td>
                        <td>@item.m_UserAccounts.Select(a => a.AccountType == (int)Jango.Lab.Models.EnumAccountType.Integral)?.Amount</td>
                        <td>@item.m_UserAccounts.Select(a => a.AccountType == (int)Jango.Lab.Models.EnumAccountType.Balance)?.Amount</td>
                        <td>@item.CreatedAt.ToString("yyyy/MM/dd HH:mm:ss")</td>

                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8">
                        <div class="alert-warning ">暂无记录</div>
                    </td>
                </tr>
            }

        </tbody>
        <tfoot>
            <tr>
                <td colspan="8">
                    <nav>
                        <ul class="pagination">
                            <li>
                                <a href="#" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            <li><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">5</a></li>
                            <li>
                                <a href="#" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </td>
            </tr>
        </tfoot>
    </table>


</div>
