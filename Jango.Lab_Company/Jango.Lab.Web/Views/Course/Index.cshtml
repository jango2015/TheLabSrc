@{
    ViewBag.Title = "课程/活动管理";
    Layout = "~/Views/_LayoutView.cshtml";
}
@using Webdiyer.WebControls.Mvc
@model IPagedList<Jango.Lab.Models.CourseInfo>
<h2>@ViewBag.Title</h2>

<div class="search">

</div>
<div class="panel">
    <div class="btn-group">
        <a href="/course/Edit" class="btn btn-default">新增</a>
    </div>
</div>

<div class="panel-body">
    <table class="table table-bordered table-responsive">
        <thead>
            <tr>
                <th>标题</th>
                <th>描述</th>
                <th>使用积分数</th>
                <th>使用余额数</th>
                <th>类型</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Desc</td>
                        <td>@item.IntegralUse</td>
                        <td>@item.BalanceUse</td>
                        @{
                            if (item.CourseType == Jango.Lab.Models.EnumCourseType.Activity)
                            {
                                <td>活动</td>
                            }
                            else if (item.CourseType == Jango.Lab.Models.EnumCourseType.Course)
                            {
                                <td>课程</td>
                            }
                            else
                            {
                                <td></td>}
                        }
                        <td>
                            <a href="/course/edit?id=@item.ID">编辑</a>
                        </td>
                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6">
                                        <div class="alert-warning ">暂无记录</div>
                                    </td>
                                </tr>
                            }

        </tbody>
        <tfoot>
            <tr>
                <td colspan="6">
                    @if (Model != null)
                    {
                        @*@Html.Pagination(Model.TotalItemCount, Model.CurrentPageIndex, Model.PageSize)*@
                        @Ajax.Pager(Model, new PagerOptions { PageIndexParameterName = "id", ContainerTagName = "ul", CssClass = "pagination", CurrentPagerItemTemplate = "<li class=\"active\"><a href=\"#\">{0}</a></li>", DisabledPagerItemTemplate = "<li class=\"disabled\"><a>{0}</a></li>", PagerItemTemplate = "<li>{0}</li>" }).AjaxOptions(a => a.SetUpdateTargetId("tbinfos"))

                    }
                </td>
            </tr>
        </tfoot>
    </table>


</div>
