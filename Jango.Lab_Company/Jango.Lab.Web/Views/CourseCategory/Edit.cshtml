@{
    Layout = "~/Views/_LayoutView.cshtml";
}
@model Jango.Lab.Models.CourseCategory


@using (Ajax.BeginForm("Edit", new AjaxOptions() { HttpMethod = "POST" }))
{
    <div class="form"><input type="hidden" name="Id" value="@Model.Id" />
        <div class="form-group">
            <label>名称</label>
            <input class="input input-control" type="text" maxlength="100" name="Name" value="@Model.Name" />
        </div>

        <div class="form-group">
            <label class="control-label">备注</label>
            <textarea class="input input-area-control" maxlength="500" rows="6" cols="22" name="Remark">@Model.Remark</textarea>
        </div>

        <div class="form-group">
            <button class="btn btn-primary" type="submit">提交</button>
        </div>
    </div>
}
